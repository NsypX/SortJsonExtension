{
  "compilerOptions": {
    "allowJs": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2019",
    "outDir": "out",
    "rootDir": "./src",   
    "noEmitOnError": true 
  },
  "exclude": ["coverage", "node_modules"]
}
